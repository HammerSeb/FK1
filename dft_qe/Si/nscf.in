&CONTROL
  calculation = 'nscf',
  restart_mode = 'restart',
  prefix = 'silicon',
  outdir = './tmp/',
  pseudo_dir = '../pseudos/',
  verbosity = 'high',
/

&SYSTEM
  ibrav = 2,
  celldm(1) = 10.2076,
  nat = 2,
  ntyp = 1,
  ecutwfc = 50,
  ecutrho = 400,
  nbnd = 16,
  occupations = 'fixed',        
/

&ELECTRONS
  conv_thr = 1e-8,
  mixing_beta = 0.6,
/

ATOMIC_SPECIES
  Si 28.086 Si.UPF

ATOMIC_POSITIONS (alat)
  Si 0.0 0.0 0.0
  Si 0.25 0.25 0.25

K_POINTS crystal_b
5
  0.000  0.000  0.000  10 ! Gamma
  0.500  0.000  0.000  10 ! X
  0.500  0.250  0.250  10 ! W
  0.375  0.375  0.750  10 ! K
  0.000  0.000  0.000  10 ! Gamma
